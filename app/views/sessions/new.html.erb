<h1>ログイン</h1>
<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>
<%= form_with url: login_path, method: :post do %>
  <div>
    <%= label_tag :user_id, "ユーザーID" %>
    <%= text_field_tag :user_id %>
  </div>
  <div>
    <%= label_tag :passowrd, "パスワード" %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag "ログイン" %>
<% end %>
